{
  "defaultSeverity": "warn",
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "member-access": [
      true,
      "no-public"
    ],
    "curly": [
      true,
      "ignore-same-line"
    ],
    "one-line": false,
    "quotemark": [true, "double"],
    "semicolon": [true, "always"],
    "object-literal-sort-keys": false,
    "ordered-imports": false
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts"
    ]
  }
}